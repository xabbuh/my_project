{% extends 'base.html.twig' %}

{% block body %}
    <h1>Urls list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Url</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for url in urls %}
            <tr>
                <td><a href="{{ path('url_show', { 'id': url.id }) }}">{{ url.id }}</a></td>
                <td>{{ url.url }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('url_show', { 'id': url.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('url_edit', { 'id': url.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('url_new') }}">Create a new url</a>
        </li>
    </ul>
{% endblock %}
